<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles cho màn hình tablet (600dp và lớn hơn) -->
    
    <!-- Card Styles -->
    <style name="ModernCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>
    
    <style name="ElevatedCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>
    
    <!-- Text Styles -->
    <style name="SectionTitle">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>
    
    <style name="CardTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    
    <style name="CardSubtitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>
</resources>