<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="@dimen/spacing_medium"
    tools:context=".Quiz.MatchingQuizActivity">

    <!-- Nút quay lại -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:padding="@dimen/spacing_small"
        android:contentDescription="Quay lại" />

    <!-- Thanh tiến trình và thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/spacing_small">
        <TextView
            android:id="@+id/tv_matching_question_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_color_primary"
            tools:text="Vòng 1/5"/>
        <ProgressBar
            android:id="@+id/pb_matching_quiz_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progress="20"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"/>
        <TextView
            android:id="@+id/tv_matching_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorSecondary"
            tools:text="Điểm: 4"/>
    </LinearLayout>

    <!-- Hướng dẫn -->
    <TextView
        android:id="@+id/tv_matching_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ghép từng từ với nghĩa tương ứng bằng cách chạm vào chúng"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:textColor="@color/text_color_secondary"/>

    <!-- Danh sách các item ghép đôi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_matching_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/spacing_medium"
        tools:listitem="@layout/item_matching"
        tools:itemCount="10"/>

    <!-- Nút tiếp tục -->
    <Button
        android:id="@+id/btn_next_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục"
        android:layout_marginTop="@dimen/spacing_medium"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>